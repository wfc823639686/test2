<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle" >

    <corners android:radius="2dp" />

    <gradient
        android:angle="45"
        android:centerColor="#C7C7C7"
        android:centerX="35%"
        android:endColor="#C7C7C7"
        android:startColor="#C7C7C7"
        android:type="linear" />

    <padding
        android:bottom="0dp"
        android:left="0dp"
        android:right="0dp"
        android:top="0dp" />

    <size
        android:height="40dp"
        android:width="270dp" />

    <stroke
        android:width="1dp"
        android:color="#C7C7C7" />

</shape>